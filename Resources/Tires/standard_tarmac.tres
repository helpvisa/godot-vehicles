[sub_resource type="GDScript" id="GDScript_6ohvx"]
script/source = "extends Resource

# public / settable
@export var stiffness: float
@export var shape: float
@export var peak: float
@export var curvature: float

func _init(p_stiffness = 10.0, p_shape = 1.3, p_peak = 1.0, p_curvature = 0.97):
	stiffness = p_stiffness
	shape = p_shape
	peak = p_peak
	curvature = p_curvature

func calcForce(weight, slip):
	var stiffness = 10
	var shape = 1.3
	var peak = 1
	var curvature = 0.97
	
	var force = \\
		weight * \\
		peak * \\
		sin(shape * \\
		atan(stiffness * slip - \\
		curvature * (atan(stiffness * slip))))
	return force"

